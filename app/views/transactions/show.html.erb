<section class='pt-5 mt-4'>

  <%= render 'shared/link_back', specified_path: transactions_path, text: t('.back_link') %>

  <%= render @transaction %>

  <div class='d-flex gap-3 mt-3'>
    <%= link_to t('.edit'), edit_transaction_path(@transaction), class: 'btn btn-outline-primary' %>

    <%= button_to t('.destroy'), @transaction, method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</section>
